<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" metadata-complete="false" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
        http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <display-name>fix-shop</display-name>

    <jsp-config>
        <taglib>
            <taglib-uri>https://nalivayko.com/jsp/tlds/fix-shop-tags</taglib-uri>
            <taglib-location>/WEB-INF/statecolor.tld</taglib-location>
        </taglib>
    </jsp-config>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.nalivayko.pool.filters.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding_type</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>internationalisationFilter</filter-name>
        <filter-class>com.nalivayko.pool.filters.InternationalisationFilter</filter-class>
        <init-param>
            <param-name>bundle</param-name>
            <param-value>lang</param-value>
        </init-param>
        <init-param>
            <param-name>locale</param-name>
            <param-value>ru</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>internationalisationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>UserAccessFilter</filter-name>
        <filter-class>com.nalivayko.pool.filters.UserAccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserAccessFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>appServlet</servlet-name>
        <servlet-class>com.nalivayko.pool.web.DispatcherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>appServlet</servlet-name>
        <url-pattern>/site/*</url-pattern>
    </servlet-mapping>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/pages/error/500.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/pages/error/404.jsp</location>
    </error-page>

</web-app>
