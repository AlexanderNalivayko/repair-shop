    <servlet>
        <servlet-name>appServlet</servlet-name>
        <servlet-class>com.nalivayko.pool.web.AppServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>appServlet</servlet-name>
        <url-pattern>/site/*</url-pattern>
    </servlet-mapping>


